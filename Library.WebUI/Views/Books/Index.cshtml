@model IEnumerable<Library.Entity.Book> 
@{
    ViewBag.Title = "Index";
}

<h2>Book List</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Book Name</th>
            <th scope="col">Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Author</td>
                <td>
                    <a href="/Books/Edit/@item.Id" class="btn btn-primary btn-sm"> Edit</a>
                    <a href="/Books/Delete/@item.Id" class="btn btn-danger btn-sm"> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>